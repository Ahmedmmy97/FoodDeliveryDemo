<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/pizza_placeholder"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/foodIV"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/foodIV"
        app:layout_constraintBottom_toBottomOf="@id/foodIV"
        app:layout_constraintTop_toTopOf="@id/foodIV"
        android:layout_marginStart="10dp"
        tools:text="Hawaiian"
        android:id="@+id/titleTV"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/titleTV"
        app:layout_constraintBottom_toBottomOf="@id/foodIV"
        app:layout_constraintTop_toTopOf="@id/foodIV"
        android:layout_marginStart="10dp"
        tools:text="46 usd"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/deleteIV"
        android:id="@+id/price"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_close_24"
        android:id="@+id/deleteIV"
        app:layout_constraintBottom_toBottomOf="@id/foodIV"
        app:layout_constraintTop_toTopOf="@id/foodIV"
app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>